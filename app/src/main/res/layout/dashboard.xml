<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_icon"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aminah Binti Mohamad"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textAppearance="@style/opens_bold"/>
                    <TextView
                        android:id="@+id/txt_relationship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prinicipal Account"
                        android:textColor="@color/gray"
                        android:background="@drawable/gray_background"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:gravity="center_horizontal|center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passport No : "/>
                <TextView
                    android:id="@+id/txt_passport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A0000000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID No : "/>
                <TextView
                    android:id="@+id/txt_id_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210 "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality : "/>
                <TextView
                    android:id="@+id/txt_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaysia"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_button_background">
                <RadioGroup
                    android:id="@+id/dashboard_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:checkedButton="@id/radio_vaccine"
                    android:background="@drawable/home_btn_second_bg"
                    android:gravity="center_vertical|center_horizontal">
                    <RadioButton
                        android:id="@+id/radio_vaccine"
                        android:layout_width="110dp"
                        android:layout_height="157dp"
                        android:button="@null" />
                    <RadioButton
                        android:id="@+id/radio_test"
                        android:layout_width="110dp"
                        android:layout_height="157dp"
                        android:button="@null"
                        android:layout_marginLeft="5dp"/>
                    <RadioButton
                        android:id="@+id/radio_mykey"
                        android:layout_width="110dp"
                        android:layout_height="157dp"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/mykey_btn_selector"/>
                </RadioGroup>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Report"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/opens_bold"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>
            <TextView
                android:id="@+id/txt_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:textAppearance="@style/opens_bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!--<TextView
                android:id="@+id/txt_nodata_vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:textAppearance="@style/opens_bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_home_vaccine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_home_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>