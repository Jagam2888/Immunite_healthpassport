<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.cmg.vaccine.viewmodel.SettingsViewModel" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SettingsFragment"
        android:background="@color/lite_yellow">

        <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                app:tint="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                style="@style/opens_bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textColor="@color/white"
            style="@style/opens_bold"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:visibility="gone"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/action_bar"
            android:layout_above="@id/layout_logout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/layout_security_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/privacy"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>

                        <RelativeLayout
                            android:id="@+id/layout_notification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/notification"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>

                        <RelativeLayout
                            android:id="@+id/layout_payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_method"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>

                        <RelativeLayout
                            android:id="@+id/layout_advanced"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Advanced"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"/>

                        <RelativeLayout
                            android:id="@+id/layout_change_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/change_password"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:visibility="gone"/>
                        <RelativeLayout
                            android:id="@+id/layout_change_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/change_language"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>
                        <RelativeLayout
                            android:id="@+id/layout_help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/help"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>

                        <RelativeLayout
                            android:id="@+id/layout_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about"
                                android:textColor="@color/black"
                                style="@style/opens_bold"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"/>

                    <RelativeLayout
                        android:id="@+id/layout_backup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow"
                            app:tint="@color/black"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Backup"
                            android:textColor="@color/black"
                            style="@style/opens_bold"
                            android:textSize="13sp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"/>

                    <RelativeLayout
                        android:id="@+id/layout_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow"
                            app:tint="@color/black"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sync"
                            android:textColor="@color/black"
                            style="@style/opens_bold"
                            android:textSize="13sp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"/>


            </LinearLayout>
                <include
                    android:id="@+id/about"
                    layout="@layout/about"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/tested"
                    layout="@layout/security_pin"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/help"
                    layout="@layout/help"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/advanced"
                    layout="@layout/advanced"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/notification"
                    layout="@layout/notification"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/payment_method"
                    layout="@layout/payment_method"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/sync"
                    layout="@layout/sync"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>


    </RelativeLayout>
</layout>