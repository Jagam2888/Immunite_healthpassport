        />-->

    <!--<androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/intro_img"
            android:layout_width="320dp"
            android:layout_height="277dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="45dp" />

        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/layout_world_entries"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/primary"
                    android:textAppearance="@style/opens_bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/white_bullet_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAppearance="@style/opens_regular"
                    android:layout_marginLeft="10dp"
                    android:text="Adding your favourite or upcoming destination."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/primary"
                    android:textAppearance="@style/opens_bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/white_bullet_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAppearance="@style/opens_regular"
                    android:layout_marginLeft="10dp"
                    android:text="Click on to the destination to check entry requirements."/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/intro_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/opens_regular"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
